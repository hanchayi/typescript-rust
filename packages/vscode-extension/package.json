{
  "name": "typescript-rust",
  "displayName": "TypeScript Rust Compiler",
  "description": "TypeScript compiler implemented in Rust with WebAssembly support",
  "version": "0.1.0",
  "publisher": "typescript-rust",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=20.18.1"
  },
  "categories": [
    "Programming Languages",
    "Compilers"
  ],
  "keywords": [
    "typescript",
    "rust",
    "compiler",
    "webassembly"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "typescript",
        "extensions": [".ts", ".tsx"],
        "aliases": ["TypeScript", "typescript"]
      }
    ],
    "configuration": {
      "title": "TypeScript Rust",
      "properties": {
        "typescriptRust.useWebWorker": {
          "type": "boolean",
          "default": true,
          "description": "Use Web Worker for compilation to avoid blocking the main thread"
        },
        "typescriptRust.target": {
          "type": "string",
          "enum": ["es5", "es2015", "es2017", "es2018", "es2019", "es2020", "es2021", "es2022", "esnext"],
          "default": "es2020",
          "description": "JavaScript target version"
        },
        "typescriptRust.module": {
          "type": "string",
          "enum": ["none", "commonjs", "amd", "umd", "system", "es2015", "es2020", "es2022", "esnext"],
          "default": "es2020",
          "description": "Module system to use"
        },
        "typescriptRust.strict": {
          "type": "boolean",
          "default": true,
          "description": "Enable strict type checking"
        }
      }
    },
    "commands": [
      {
        "command": "typescriptRust.compile",
        "title": "Compile with Rust TS",
        "category": "TypeScript Rust"
      },
      {
        "command": "typescriptRust.check",
        "title": "Type Check with Rust TS",
        "category": "TypeScript Rust"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .ts || resourceExtname == .tsx",
          "command": "typescriptRust.compile",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  },
  "overrides": {
    "undici": "6.19.8"
  },
  "files": [
    "out/**/*",
    "package.json",
    "README.md"
  ]
}